<p id="notice"><%= notice %></p>

<h1 style="margin:10px;">SEARCH FOR FLOOD INFORMATION</h1>


 <form class="form-inline my-2 my-lg-0" >
       <div class="col-sm-10" style="align:center;">
      <%= form_tag(search_index_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Search' %>
    </div>
 </form>


<% end %>
<table class="table table-bordered" style="margin-top:30px;">
  <thead class="thead-dark">
    <tr>     
     <th>Date began</th>
      <th>Country</th>
      <th>Main cause</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search.each do |search| %>
      <tr>
        <td><%= search.began %></td>
        <td><%= search.country.name %></td>
        <td><%= search.maincause %></td>
        <td><%= link_to 'More details', search %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>

<%= will_paginate @search %>


<li class="nav-item">
        <a type="button" class="btn btn-outline-primary" style="margin-left:45%;"<%= link_to 'Display Country data', jsondata_index_path %></a>
</li>
