<p id="notice"><%= notice %></p>

<h1>Information</h1>

<table>
  <thead>
    <tr>
      <th>Began</th>
      <th>Ended</th>
      <th>Validation</th>
      <th>Dead</th>
      <th>Displaced</th>
      <th>Maincause</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @information.each do |information| %>
      <tr>
        <td><%= information.began %></td>
        <td><%= information.ended %></td>
        <td><%= information.validation %></td>
        <td><%= information.dead %></td>
        <td><%= information.displaced %></td>
        <td><%= information.maincause %></td>
        <td><%= information.country.name %></td>
        <td><%= link_to 'Show', information %></td>
        <td><%= link_to 'Edit', edit_information_path(information) %></td>
        <td><%= link_to 'Destroy', information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

