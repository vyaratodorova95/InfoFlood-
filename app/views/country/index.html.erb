<p id="notice"><%= notice %></p>

<centre><h1>Country</h1></centre>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @country.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<li class="nav-item">
        <a type="button" class="btn btn-outline-primary" style="margin-left:45%;"<%= link_to 'New Country', new_country_path %></a>
</li>
